{
  "name": "vivid",
  "version": "1.0.0",
  "private": true,
  "description": "Financial Digital Twin â€” Beyond Credit Scores",
  "workspaces": [
    "packages/shared",
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run dev -w backend",
    "build": "npm run build -w packages/shared && npm run build -w backend && npm run build -w frontend",
    "build:shared": "npm run build -w packages/shared",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "db:migrate": "npx prisma migrate dev --schema=prisma/schema.prisma",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio --schema=prisma/schema.prisma",
    "typecheck": "tsc --noEmit -p frontend/tsconfig.json && tsc --noEmit -p backend/tsconfig.json"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "prisma": "^5.22.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}