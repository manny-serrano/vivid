# ── App ────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
API_VERSION=v1

# ── Database ───────────────────────────────────────────
DATABASE_URL=postgresql://vivid:password@localhost:5432/vivid_dev

# ── Firebase ───────────────────────────────────────────
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
VITE_FIREBASE_API_KEY=your-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ── Google Cloud ───────────────────────────────────────
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json

# ── Vertex AI ─────────────────────────────────────────
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-pro

# ── Cloud KMS ─────────────────────────────────────────
KMS_KEY_RING=vivid-keyring
KMS_CRYPTO_KEY=plaid-token-key
KMS_LOCATION=global

# ── Cloud Pub/Sub ─────────────────────────────────────
PUBSUB_TOPIC_TWIN_GENERATION=vivid-twin-generation
PUBSUB_SUBSCRIPTION_TWIN_WORKER=vivid-twin-worker-sub

# ── Cloud Storage ─────────────────────────────────────
GCS_BUCKET_REPORTS=vivid-twin-reports

# ── Plaid ─────────────────────────────────────────────
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-sandbox-secret
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,identity
PLAID_COUNTRY_CODES=US

# ── Hedera ────────────────────────────────────────────
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.xxxxxxx
HEDERA_PRIVATE_KEY=your-hedera-ed25519-private-key
HEDERA_TOPIC_ID=0.0.xxxxxxx

# ── Encryption ────────────────────────────────────────
ENCRYPTION_KEY=32-char-fallback-key-for-local-dev

# ── Rate Limiting ─────────────────────────────────────
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
